
" vim: filetype=vim

" Sets the colorscheme
colorscheme molokai
set background=dark

" set the space from the current line when scrolling
set scrolloff=3

" set the colors when using terminal commands
set noguipty

" command-line completion shows a list of matches
set wmnu

"Set a better font for mac os
"python from powerline.ext.vim import source_plugin; source_plugin()
set guifont=Menlo\ Regular\ For\ Powerline
let g:Powerline_symbols = 'fancy'


"load the status line
source ~/.vim/conf/statusline

