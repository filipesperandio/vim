" vim: syntax=vim

" Sets options for vim instead of vi
set nocompatible

" Sets vi encoding to utf 8
set encoding=utf-8

" Always show the status line
set laststatus=2

" Syntax highlighting
if &t_Co > 1
  syntax on
endif

" Indentation
filetype plugin indent on
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab

" Highlights extra whitespaces at the end of the lines
:highlight ExtraWhitespace ctermfg=15 ctermbg=4 guifg=#CF6A4C guibg=#420E09
:match ExtraWhitespace /\s\+$\| \+\ze\t/

" Search highlighting and incremental
set incsearch
set hlsearch

" Shows the matching bracket
set showmatch

" Set change word to append a dollar at the end of the selection
set cpoptions+=$

" Color scheme
colorscheme molokai

" Shows cmd that is currently being typed
set showcmd

" Auto indentation for programming =)
set ai

" Do not create a backup file
set nobackup
